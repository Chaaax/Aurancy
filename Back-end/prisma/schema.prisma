generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  fullName   String
  birthDate  DateTime
  country    String
  phone      String
  currency   String?
  profile    String?
  createdAt  DateTime @default(now())
}
